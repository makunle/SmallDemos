<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iflytek.mkl.accessibilitywithwechatpractice.MainActivity">

    <ImageView
        android:background="@drawable/bk5"
        android:scaleType="centerInside"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/say"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d6b493"
                android:textColor="#000"
                android:textSize="50sp" />
        </ScrollView>
        <TextView
            android:layout_width="match_parent"
            android:background="#888"
            android:layout_height="2dp" />
        <TextView
            android:id="@+id/man"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#88c4a4"
            android:textColor="#000"
            android:textSize="50sp" />


    </LinearLayout>

    <ImageButton
        android:id="@+id/permission_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/ico_setting"
        android:layout_margin="10dp"
        android:text="权限" />


</FrameLayout>
